{
  "name": "task-6",
  "version": "1.0.0",
  "description": "Este proyecto muestra cómo consumir una API (The Movie Database) utilizando tanto JavaScript puro como jQuery, implementando infinite scroll y diseño responsive con TailwindCSS.",
  "main": "index.js",
  "scripts": {
    "vigilar": "tailwindcss -i ./fuente/estilos/principal.css -o ./fuente/estilos/salida.css --watch",
    "compilar": "tailwindcss -i ./fuente/estilos/principal.css -o ./fuente/estilos/salida.css",
    "parcel:des": "parcel serve fuente/jquery.html --dist-dir compilado/desarrollo",
    "parcel:prod": "parcel build fuente/jquery.html --dist-dir compilado/desarrollo",
    "prod": "run-s limpia parcel:prod",
    "limpia": "rimraf compilado .parcel-cache",
    "des": "run-s limpia parcel:des"
  },
  "author": "Mario Ubago Martos",
  "license": "ISC",
  "devDependencies": {
    "flowbite": "^3.1.2",
    "jquery": "^3.7.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.13.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1"
  }
}
